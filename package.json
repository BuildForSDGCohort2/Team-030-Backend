    "@babel/register": "^7.10.5",
    "@types/express": "^4.17.7",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-watch": "^7.0.0",
    "mocha": "^8.1.1",
