{
  "name": "Team-030-Backend",
  "version": "1.0.0",
  "description": "[![Codacy Badge](https://api.codacy.com/project/badge/Grade/e20c185539ad4701a0c579f933436d37)](https://app.codacy.com/gh/BuildForSDGCohort2/Team-030-Backend?utm_source=github.com&utm_medium=referral&utm_content=BuildForSDGCohort2/Team-030-Backend&utm_campaign=Badge_Grade_Settings)",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel start:windows lint:watch",
    "start:windows": "set DEBUG=worker & babel-node src/index.js",
    "start:unix": "DEBUG=worker babel-node src/index",
    "clean:unix": "rm -rf build",
    "build": "babel src -d build",
    "build:unix": "npm run clean:unix && npm run build",
    "lint:watch": "esw src --watch",
    "fix": "npm run lint:watch -- --fix",
    "dev:unix": "export NODE_ENV=development && npm run build:unix && npm run start:unix",
    "test:unix": "echo 'Tests will come later'",
    "prod": "export NODE_ENV=production && npm run build:unix && npm run start:unix"
  },
  "repository": {
    "type": "git",
